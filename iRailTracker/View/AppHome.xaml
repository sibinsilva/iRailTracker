<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.AppHome"
             xmlns:vm="clr-namespace:iRailTracker.ViewModel"
             xmlns:views="clr-namespace:iRailTracker.View"
             Title="iRailTracker">

    <NavigationPage.TitleView>
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Image Source="logo.png"
                   HeightRequest="28"
                   WidthRequest="28"
                   VerticalOptions="Center" />
            <Label Text="iRailTracker"
                   FontSize="Title"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            IconImageSource="settings.png"
            Priority="0"
            Order="Primary"
            Command="{Binding OpenSettingsCommand}" />
        <ToolbarItem
            Text="About"
            Priority="1"
            Order="Secondary"
            Clicked="OnAboutClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER -->
        <views:AppHomeHeader Grid.Row="0" />

        <!-- LIST -->
        <views:AppHomeListView Grid.Row="1" />

        <!-- EMPTY / NO DATA OVERLAY -->
        <Grid Grid.Row="1"
              IsVisible="{Binding NoJourneyFound}"
              BackgroundColor="Transparent">

            <Label Text="{Binding NoJourneyMsg}"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center" />
        </Grid>

    </Grid>
</ContentPage>
