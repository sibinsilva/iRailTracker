<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.AppHome"
             xmlns:vm="clr-namespace:iRailTracker.ViewModel"
             xmlns:views="clr-namespace:iRailTracker.View"
             Title="iRailTracker">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.28*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- First Row: Grid with RadioButtons and Search Button -->
        <views:AppHomeHeader Grid.Row="0" />
        <!-- Second Row: Grid with ListView -->
        <views:AppHomeListView Grid.Row="1" />

        <Grid Grid.Row="1" IsVisible="{Binding NoJourneyFound}">
            <Label Text="{Binding NoJourneyMsg}" FontSize="Large" />
        </Grid>
    </Grid>
</ContentPage>
