<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.AppHomeHeader"
             xmlns:vm="clr-namespace:iRailTracker.ViewModel"
             xmlns:strings="clr-namespace:iRailTracker.Resources.Strings">

    <Border
        StrokeShape="RoundRectangle 16"
        BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"
        Padding="16"
        Margin="12">

        <Border.Shadow>
            <Shadow Radius="12"
                    Opacity="0.25"
                    Offset="0,4" />
        </Border.Shadow>

        <VerticalStackLayout Spacing="16">

            <!-- HEADER -->
            <Label Text="{x:Static strings:AppStrings.HeaderChooseOption}"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Start" />

            <!-- RADIO OPTIONS -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="12"
                  HorizontalOptions="Fill">

                <RadioButton x:Name="Find_Station"
                             Grid.Column="0"
                             Content="{x:Static strings:AppStrings.LocateNearbyStation}"
                             FontSize="Medium"
                             IsChecked="{Binding IsFindNearbyStationChecked}"
                             HorizontalOptions="Start" />

                <RadioButton x:Name="Search_Station"
                             Grid.Column="1"
                             Content="{x:Static strings:AppStrings.PickTrainStation}"
                             FontSize="Medium"
                             IsChecked="{Binding IsLocateStationChecked}"
                             HorizontalOptions="Start" />

            </Grid>

            <!-- DIVIDER -->
            <BoxView HeightRequest="1"
                     Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                     HorizontalOptions="Fill" />

            <!-- PICKER + SEARCH -->
            <Grid ColumnDefinitions="*,Auto"
                  ColumnSpacing="12">

                <Picker x:Name="stationPicker"
                        Title="{x:Static strings:AppStrings.SelectStationTitle}"
                        ItemsSource="{Binding StationOptions}"
                        SelectedItem="{Binding SelectedStation, Mode=TwoWay}"
                        IsVisible="{Binding IsStationListLoaded}"
                        IsEnabled="{Binding IsStationListLoaded}"
                        FontSize="Medium"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        Grid.Column="0"/>

                <Button Text="{Binding ButtonText}"
                        Command="{Binding SearchServiceCommand}"
                        IsVisible="{Binding IsStationListLoaded}"
                        FontSize="Medium"
                        Padding="16,10"
                        VerticalOptions="Center"
                        Grid.Column="1"/>
            </Grid>

            <!-- SEARCH BUTTON / LOADER / REFRESH INFO -->
            <VerticalStackLayout Spacing="8"
                                 HorizontalOptions="Center">

                <Button Text="{x:Static strings:AppStrings.SearchStations}"
                        CornerRadius="12"
                        Padding="24,12"
                        IsVisible="{Binding HideSearchButton}"
                        Command="{Binding SearchCommand}"
                        HorizontalOptions="Center" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"/>

                <Label Text="{Binding RefreshTime}"
                       IsVisible="{Binding EnableListView}"
                       FontSize="Small"
                       HorizontalOptions="Center"/>

                <Label Text="{Binding RefreshStatusText}"
                       FontSize="Micro"
                       Opacity="0.6"
                       HorizontalOptions="Center"
                       IsVisible="{Binding EnableListView}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Border>

</ContentView>
