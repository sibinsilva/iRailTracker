<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.AppHomeHeader"
             xmlns:vm="clr-namespace:iRailTracker.ViewModel">

    <Border
        StrokeShape="RoundRectangle 16"
        BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
        Padding="16"
        Margin="12"
        Shadow="{
            Shadow
            Radius=12,
            Opacity=0.25,
            Offset='0,4'
        }">

        <Grid RowDefinitions="Auto,Auto,Auto">

            <!-- HEADER -->
            <StackLayout Grid.Row="0" Spacing="12">

                <Label Text="Please choose an option to begin."
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalOptions="Start" />

                <StackLayout Orientation="Horizontal"
                             Spacing="24"
                             HorizontalOptions="Fill">

                    <RadioButton x:Name="Find_Station"
                                 Content="Locate Nearby Station"
                                 FontSize="Medium"
                                 IsChecked="{Binding IsFindNearbyStationChecked}"
                                 HorizontalOptions="StartAndExpand"/>

                    <RadioButton x:Name="Search_Station"
                                 Content="Pick a Train Station"
                                 FontSize="Medium"
                                 IsChecked="{Binding IsLocateStationChecked}"
                                 HorizontalOptions="StartAndExpand"/>
                </StackLayout>

            </StackLayout>

            <!-- PICKER + SEARCH -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto"
                  Margin="0,16,0,0">

                <Picker x:Name="stationPicker"
                        Title="Select a station"
                        ItemsSource="{Binding StationOptions}"
                        SelectedItem="{Binding SelectedStation, Mode=TwoWay}"
                        IsVisible="{Binding IsStationListLoaded}"
                        IsEnabled="{Binding IsStationListLoaded}"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center"
                        Grid.Column="0"/>

                <Button Text="{Binding ButtonText}"
                        Command="{Binding SearchServiceCommand}"
                        IsVisible="{Binding IsStationListLoaded}"
                        FontSize="Medium"
                        Padding="16,10"
                        VerticalOptions="Center"
                        Grid.Column="1"/>
            </Grid>

            <!-- SEARCH BUTTON / LOADER / REFRESH INFO -->
            <StackLayout Grid.Row="2"
                         Spacing="12"
                         HorizontalOptions="Center"
                         Margin="0,16,0,0">

                <Button Text="Search Stations"
                        WidthRequest="180"
                        HeightRequest="50"
                        CornerRadius="12"
                        IsVisible="{Binding HideSearchButton}"
                        Command="{Binding SearchCommand}"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"/>

                <Label Text="{Binding RefreshTime}"
                       IsVisible="{Binding EnableListView}"
                       FontSize="Small"
                       HorizontalOptions="Center"/>
            </StackLayout>

        </Grid>
    </Border>

</ContentView>
