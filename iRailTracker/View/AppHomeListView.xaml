<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.AppHomeListView"
             xmlns:vm="clr-namespace:iRailTracker.ViewModel"
             xmlns:strings="clr-namespace:iRailTracker.Resources.Strings">

    <Grid IsVisible="{Binding EnableListView}"
          RowDefinitions="Auto,*"
          Padding="4">

        <!-- OPTIONAL HEADER (can remove if not needed) -->
        <Label Grid.Row="0"
               Text="{x:Static strings:AppStrings.LiveTrainJourneys}"
               FontSize="Medium"
               FontAttributes="Bold"
               Margin="8,4"
               IsVisible="False" />

        <!-- CARD LIST -->
        <RefreshView Grid.Row="1"
             IsRefreshing="{Binding IsRefreshing}"
             Command="{Binding RefreshCommand}"
             IsEnabled="{Binding EnableListView}">
            <CollectionView Grid.Row="1"
                        ItemsSource="{Binding TrainJourneys}"
                        VerticalOptions="Fill"
                        HorizontalOptions="Fill"
                        Margin="6"
                        >

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Border Stroke="#444"
                            StrokeThickness="1"
                            Padding="14"
                            Margin="0,6"
                            BackgroundColor="#1E1E1E">

                            <VerticalStackLayout Spacing="6">

                                <!-- ROUTE -->
                                <Label FontSize="Medium"
                                   FontAttributes="Bold"
                                   LineBreakMode="WordWrap">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Origin}" />
                                            <Span Text=" â†’ " />
                                            <Span Text="{Binding Destination}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- CURRENT STATUS -->
                                <Label Text="{Binding CurrentStatus}"
                                   FontSize="Small"
                                   LineBreakMode="WordWrap"
                                   TextColor="#CCCCCC" />

                                <!-- TIMING GRID -->
                                <Grid ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto"
                                  Margin="0,6,0,0">

                                    <Label Text="Arriving in"
                                       FontSize="Small"
                                       TextColor="#AAAAAA" />

                                    <Label Text="{Binding DueIn}"
                                       Grid.Column="1"
                                       HorizontalTextAlignment="End"
                                       FontSize="Small" />

                                    <Label Text="Expected"
                                       Grid.Row="1"
                                       FontSize="Small"
                                       TextColor="#AAAAAA" />

                                    <Label Text="{Binding ExpectedArrival}"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalTextAlignment="End"
                                       FontSize="Small" />
                                </Grid>

                                <!-- DELAY -->
                                <Label Text="{Binding LateDisplay}"
                                   FontSize="Small"
                                   HorizontalOptions="End"
                                   TextColor="{Binding LateColor}" />

                            </VerticalStackLayout>

                        </Border>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

    </Grid>
</ContentView>
