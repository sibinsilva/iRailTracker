<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iRailTracker.View.StartPage"
             Title="StartPage"
             Background="White">
    <StackLayout Padding="20">
        <Label Text="Welcome to iRailTracker"
               FontSize="32"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               TextColor="Black"/>

        <Button Text="Start"
                HorizontalOptions="Center"
                FontSize="Medium"
                VerticalOptions="End"
                Margin="0,20,0,0"
                HeightRequest="100"
                WidthRequest="200"
                Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>