<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="iRailTracker.View.TrainLiveStatusPage"
             Title="Live Status">

    <Grid RowDefinitions="Auto,*" Padding="12">

        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="{Binding Origin}" FontAttributes="Bold" FontSize="16" />
            <Label Text="{Binding Destination}" FontAttributes="Bold" FontSize="16" />
            <Label Text="{Binding CurrentStatus}" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource SubtleTextLight}, Dark={StaticResource SubtleTextDark}}" />
        </VerticalStackLayout>

        <mapsui:MapControl x:Name="TrainMapControl" Grid.Row="1" />

    </Grid>
</ContentPage>
